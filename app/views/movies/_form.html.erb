<%= render partial:"layouts/flash_alert" %>
<%= render partial:"layouts/errors", locals: {model: model } %>


<%= form_with model: model, url: video_path do |f| %>
    <div class="form-group">
        <%= f.text_field :title, class: "form-control", placeholder: "MOVIE TITLE" %>
    </div>

    <div class="form-group">
        <%= f.text_area :description, class: "form-control", placeholder: "Describe The Movie" %>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <%= f.label :genre, "Genre",class: "input-group-text" %>
        </div>
         <%= f.select :genre, genres,{}, class:"custom-select"%>
    </div>

    <div class="form-group">
        
    </div>

    <div class="custom-file mb-3">
        <%= f.file_field :image, class: "custom-file-input" %>
        <%= f.label :image, class: "custom-file-label"%>
    </div> 

    <div class="custom-file mb-5">
        <%= f.file_field :video, class: "custom-file-input" %>
        <%= f.label :video, class: "custom-file-label"%>
    </div> 
    
    <%= f.submit upload_type, class: "btn btn-info"%>
<% end %>


